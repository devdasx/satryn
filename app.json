{
  "expo": {
    "name": "Satryn",
    "slug": "bitcoin-wallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "satryn",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF",
      "dark": {
        "image": "./assets/splash-icon-dark.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      }
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.satryn.bitcoinapp",
      "entitlements": {
        "com.apple.developer.ubiquity-kvstore-identifier": "$(TeamIdentifierPrefix)$(CFBundleIdentifier)"
      },
      "infoPlist": {
        "NSCameraUsageDescription": "Camera is used to scan QR codes for Bitcoin addresses",
        "NSFaceIDUsageDescription": "Face ID is used to secure your wallet",
        "NSBluetoothAlwaysUsageDescription": "Bluetooth is used to send and receive Bitcoin with nearby devices",
        "NSLocalNetworkUsageDescription": "Local network access is used to discover nearby devices for sending and receiving Bitcoin",
        "NSBonjourServices": [
          "_satryn._tcp"
        ],
        "ITSAppUsesNonExemptEncryption": false
      },
      "appleTeamId": "ALH96JDA6X"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F7931A"
      },
      "package": "com.bitcoinwallet.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_ADVERTISE",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to scan QR codes",
          "microphonePermission": false,
          "recordAudioAndroid": false
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID for authentication"
        }
      ],
      "expo-font",
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": false,
          "modes": [],
          "bluetoothAlwaysPermission": "Allow $(PRODUCT_NAME) to use Bluetooth for nearby payments"
        }
      ],
      "expo-nearby-connections",
      "expo-sqlite",
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "ff87788f-a188-49e3-9b15-e6fd5348623b"
      }
    },
    "owner": "yousefbitq"
  }
}
